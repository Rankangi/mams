{% extends 'base.html.twig' %}

{% block title %}Joy Creation{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <div class="list-group">
                    {% for category in categories %}
                        <a href="{{ path('category_show', {'id': category.id }) }}"
                           class="list-group-item">{{ category.title }}</a>
                    {% endfor %}
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <!-- Grid row -->
                <div class="row">
                    {% for article in category.articles %}
                        {% if article.amount != 0 %}
                            <!-- Grid column -->
                            <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">
                                <!-- Card -->
                                <div class="card card-cascade narrower card-ecommerce">
                                    <!-- Card image -->
                                    <div class="view view-cascade overlay">
                                        <a href="{{ path('article_show', {'id': article.id}) }}"><img src="{{ asset( 'uploads/images/article/') }}{{ article.image }}"
                                             class="card-img-top"
                                             alt="sample photo"></a>
                                        <a>
                                            <div class="mask rgba-white-slight"></div>
                                        </a>
                                    </div>
                                    <!-- Card image -->
                                    <!-- Card content -->
                                    <div class="card-body card-body-cascade text-center">
                                        <!-- Title -->
                                        <h4 class="card-title">
                                            <strong>
                                                <a href="{{ path('article_show', {'id': article.id }) }}">{{ article.title }}</a>
                                            </strong>
                                        </h4>
                                        <!-- Description -->
                                        <p class="card-text">{{ article.description | raw }}</p>
                                        <!-- Card footer -->
                                        <div class="card-footer px-1">
                                            <span class="float-left font-weight-bold">
                                              <strong>{{ article.price/100 }} â‚¬</strong>
                                            </span>
                                        </div>
                                    </div>
                                    <!-- Card content -->
                                </div>
                                <!-- Card -->
                            </div>
                            <!-- Grid column -->
                        {% endif %}
                    {% endfor %}
                </div>
                <!-- Grid row -->
            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
